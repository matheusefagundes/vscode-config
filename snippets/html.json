{
/*
	 // Place your snippets for HTML here. Each snippet is defined under a snippet name and has a prefix, body and 
	 // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	 // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	 // same ids are connected.
	 // Example:
	 "Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
	"HTML base":{
		"prefix": "html",
		"body": [
			"<!DOCTYPE html>",
			"<html>",
			"<head>",
			"	<title>$0</title>",
			"</head>",
			"<body>",
			"</body>",
			"</html>"
		],
		"description": "Cria as tags comuns a todo documento HTML."
	},

	"Tag script":{
		"prefix": "script",
		"body": "<script type=\"text/javascript\" src=\"$0\"></script>",
		"description": "Cria a tag <script> configurada para Javascript."
	},

	"Tag link para css": {
		"prefix": "link",
		"body": "<link rel=\"stylesheet\" type=\"text/css\" href=\"$0.css\"/>",
		"description": "Cria a tag <link> configurada para css."
	},

	"Row":{
		"prefix": "row",
		"body": [
			"<div class=\"row\">",
			"	$0",
			"</div>"
		],
		"description": "Cria uma div com a classe 'row'."
	},

	"Col":{
		"prefix": "col",
		"body": [
			"<div class=\"col s12\">",
			"	$0",
			"</div>"
		],
		"description": "Cria uma div com as classes 'col' e 's12'."
	}

}