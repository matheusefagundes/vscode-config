// Place your settings in this file to overwrite the default settings
{
    "php.validate.executablePath": "/opt/lampp/bin/php",
    "editor.fontFamily": "'Roboto Mono Regular', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 15,
    "window.zoomLevel": 0,
    "editor.tabSize": 6,
    "editor.insertSpaces": false,
    "terminal.integrated.cursorBlinking": true,
    "files.associations": {
        "*.md": "markdown",
        "*.htm": [
            "html",
            "php"
        ]
    },
    "editor.renderIndentGuides": true,
    "editor.fontWeight": "300",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "editor.renderWhitespace": "none",
    "git.enabled": true,
    "terminal.integrated.fontFamily": "'Roboto Mono Regular', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontSize": 14,
    "workbench.editor.showIcons": false,
    "editor.minimap.enabled": false,
    "workbench.iconTheme": null,
    "workbench.editor.showTabs": false,
    "workbench.startupEditor": "newUntitledFile",
    "typescript.check.npmIsInstalled": false
}